<%= simple_form_for([@post,@post.comments.build]) do |f| %>
    <div class ='form-inputs'>
      <%= f.input :comment,
          input_html: {class:'materialize-textarea',},
          wrapper_html: {class:'input-field'},
          label: 'Leave A Reply...' %>
    </div>
    <div class='form-actions'>
      <%= f.button :submit , class:'button is-primary' %>
    </div>
  <% end %>