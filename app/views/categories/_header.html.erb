<!-- topmost header -->
  <div class='navbar-fixed hide-on-small-only'>
    <nav class ='indigo darken-4'>
      <div class='nav-wrapper'>
        <a href='#' class='brand-logo'>Atlas</a>

        <ul id='nav-mobile' class='right'>
          <li class='category-select input-field'>
            <a class='dropdown-trigger' href='#' data-target = 'category'>
              <p><%= @categories.find(params[:id]).name %> </p> <%= icon('fa','angle-down')%>
            </a>
          </li>

          <li class='search'><a href=''><%= icon('fa','search') %></a></li>
          <li class='hide-on-med-and-down'>
            <a class='dropdown-trigger' href='#' data-target='profile'><p><%= "#{current_user.firstName} #{current_user.lastName}"%></p><%=icon('fa','angle-down')%></a>
          </li>
          <li><a data-target="mobile-nav" class="sidenav-trigger"><%=icon('fa','bars') %></a></li>
        </ul>
      </div>
    </nav>
  </div>

  <!-- Profile Dropdown -->
  <ul id='profile' class='dropdown-content'>
    <li><a href='#'>My Profile</a></li>
    <li><%= link_to('Log Out',destroy_user_session_path, method: :delete, class:'waves-effect')%></li>
    <li class='divider' tabindex='-1'></li>
    <li><a href='#'>F.A.Q</a></li>
    <li><a href='#'> Help Center</a></li>
  </ul>
  
  <!-- Category Dropdown -->
  <ul id='category' class='dropdown-content'>
    <% @categories.each do |category| %>
      
      <% unless category.id == params[:id].to_i %>
        <li><%= link_to category.name, category %></li>
      <% end %>
    <% end %>
  </ul>
