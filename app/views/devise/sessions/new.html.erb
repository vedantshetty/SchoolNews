<%= render 'devise/shared/header' %>
<section class='section registration'>
  <div class='row valign-wrapper'>
    <div class='col hide-on-small-only m6 l4 blue-grey image valign-wrapper white-text'><h1>Stay Updated</h1></div>
    <div class=' col s12  m6  l8 center-align info'>
      <h2 class='title'>Log Into <span class='red-text'>A</span>tlas</h2>
      <%= simple_form_for(resource, as:resource_name, url: session_path(resource_name)) do |f| %>
        <div class='form-inputs'>
          <%= f.input :email,
                      required: true,
                      label: true,
                      autofocus: true,
                      placeholder: 'ADID',
                      class: 'validate',
                      label: false %> 
          
        <%= f.input :password,
                    required: true,
                    label: false,
                    placeholder: 'Password',
                    class: 'validate',
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        <div class='form-actions'>
          <%= f.button :submit, "Log in", class:'button is-primary' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>

</section>
</div>

</div>