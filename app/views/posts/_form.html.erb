<div class = 'section post-editor'>
  <%= simple_form_for @post do |f| %>
    <div class='form-inputs'>
      <div class ='field'>
        <div class ='control'>
          <%= f.input :title,
                      label: 'Title',
                      wrapper_html: {class:'input-field'}%>
        </div>
      </div>

      <div class='field'>
        <div class='control'>
          <%= f.input :category_id,
                      selected: 1,
                      :collection=>Category.all.order('created_at') %>
        </div>
      </div>
      <div class ='field section'>
        <div class ='control'>
          <%= f.rich_text_area :content,
                                input_html: {class:'textarea materialize-textarea'},
                                wrapper: false,
                                label_html: {class:'label'} %>
        </div>
      </div>
      <div class='form-actions center-align section'>
      <%= f.button :submit , class:'button waves-effect waves-light is-primary' %>
    <% end %>
  </div>
</div>


<script>
// Temp
    $('#post_category_id').formSelect();
</script>