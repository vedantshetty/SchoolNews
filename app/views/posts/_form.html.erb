<div class = 'section post-editor'>
  <%= simple_form_for @post do |f| %>
    <div class='form-inputs'>
      <div class ='field'>
        <div class ='control'>
          <%= f.input :title,
                      label: 'Title',
                      wrapper_html: {class:'input-field'}%>
        </div>
      </div>
      <div class ='field'>
        <div class ='control'>
          <%= f.rich_text_area :content,
                                input_html: {class:'textarea materialize-textarea'},
                                wrapper: false,
                                label_html: {class:'label'} %>
        </div>
      </div>
      <%= f.button :submit , class:'button is-primary' %>
    <% end %>
  </div>
</div>